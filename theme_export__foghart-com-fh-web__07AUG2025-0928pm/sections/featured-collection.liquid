<style>
  .featured-collection{
    margin-top: {{ section.settings.margin-top }}px;
    margin-bottom: {{ section.settings.margin-bottom }}px;
    text-align: center;
  }
  
  .f-collection-title{
    padding-bottom: 15px;
    text-align: center;
  }
  
  .product-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .product-list__product-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: calc(25% - 20px);
  }
  
  .product-list__img-link {
    display: block;
    text-decoration: none;
    width: 100%;
    margin-bottom: 15px;
  }
  
  .product-list__product-img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .product-list__product-name {
    display: block;
    text-decoration: none;
    color: #333;
    margin: 0 0 4px 0;
    font-size: 16px;
    font-weight: 600;
    width: 100%;
    text-align: center;
    line-height: 1.3;
  }
  
  .product-list__product-price {
    margin: 0;
    font-size: 14px;
    font-weight: 500;
    color: #666;
    text-align: center;
    width: 100%;
  }
  
  /* Tablet nastavenia */
  @media screen and (max-width: 1100px) {
    .product-list__product-block {
      width: calc(33.33% - 20px);
    }
  }
  
  @media screen and (max-width: 950px) {
    .product-list__product-block {
      width: calc(50% - 15px);
    }
  }
  
  /* Mobile nastavenia */
  @media screen and (max-width: 768px) {
    .product-list {
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      padding: 0 20px;
      max-width: 100%;
    }
    
    .product-list__product-block {
      width: 100%;
      max-width: 150px;
      justify-self: center;
    }
    
    .product-list__img-link {
      margin-bottom: 8px;
      height: 180px;
      overflow: hidden;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .product-list__product-img {
      width: auto;
      height: 100%;
      max-width: 100%;
      object-fit: contain;
    }
    
    .product-list__product-name {
      font-size: 12px;
      margin: 0 0 2px 0;
      width: 150px;
    }
    
    .product-list__product-price {
      font-size: 11px;
      width: 150px;
    }
  }
  
  @media screen and (max-width: 480px) {
    .product-list {
      gap: 15px;
      padding: 0 15px;
    }
    
    .product-list__product-block {
      max-width: 130px;
    }
    
    .product-list__img-link {
      height: 160px;
    }
    
    .product-list__product-name {
      width: 130px;
      font-size: 11px;
    }
    
    .product-list__product-price {
      width: 130px;
      font-size: 10px;
    }
  }
</style>

<div class="page-width featured-collection">
  {% if section.settings.collection-title != blank %}
    <h2 class="f-collection-title">{{ section.settings.collection-title }}</h2>
  {% endif %}
  <div class="product-list">
    {% assign selected_collection = collections[section.settings.collection_handle] %}
    {% assign products_to_display = selected_collection.products %}
    
    {% if section.settings.collection_handle == blank %}
      {% assign products_to_display = collections['all'].products %}
    {% endif %}
    
    {% for product in products_to_display limit: section.settings.products_per_page %}
      <div class='product-list__product-block fade-in'>
        <a class='product-list__img-link' href='{{ product.url }}'>
          <img class='product-list__product-img' 
               src='{{ product.featured_image | img_url: 'master' }}' 
               alt="{{ product.title }}"
               onload="this.closest('.product-list__product-block').classList.add('loaded')">
        </a>
        <a class='product-list__product-name' href='{{ product.url }}'>{{ product.title }}</a>
        {% if product.compare_at_price > product.price and product.compare_at_price > 0 %}
          <p class='product-list__product-price'>{{ product.price | money_with_currency }}<span><strike style="margin-left: 10px;">{{ product.compare_at_price | money_with_currency }}</strike></span></p>
        {% else %}
          {% assign available = false %}
          {% for variant in product.variants %}
            {% if variant.inventory_management == nil or variant.inventory_policy == 'continue' %}
              {% assign available = true %}
              {% break %}
            {% elsif variant.inventory_quantity > 0 %}
              {% assign available = true %}
              {% break %}
            {% endif %}
          {% endfor %}
          {% if available %}
            <p class='product-list__product-price'>{{ product.price | money_with_currency }}</p>
          {% else %}
            <p class='product-list__product-price'>{{ product.price | money_with_currency }} â€” Sold Out</p>
          {% endif %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection_handle",
      "label": "Select a collection",
      "info": "Do not select a collection if you want to display all products"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products to show",
      "min": 1,
      "max": 100,
      "default": 10,
      "step": 1
    },
    {
      "type": "text",
      "id": "collection-title",
      "label": "Title",
      "default": "COLLECTION NAME"
    },
    {
      "type": "range",
      "id": "margin-top",
      "label": "Top padding",
      "min": 0,
      "max": 70,
      "default": 30,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 70,
      "default": 15,
      "step": 1,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}